{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "resolveJsonModule": true, // Only use when import data file
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["@types/node", "@nuxt/types"]
  },
  "include": ["/**/*"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
